{% extends 'layout.html.twig' %}

{% block title %}Invitaciones{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Mis invitaciones</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Grupo</th>
                        <th>Código</th>
                        <th>Fecha de aceptación</th>
                    </tr>
                </thead>
                <tbody>
                    {% for index in invitations %}
                    <tr>
                        <td>{{index.userGroup.groupName}}</td>
                        <td>{{index.userGroup.uuid}}</td>
                        <td>{{index.createdAt|date("m/d/Y")}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
