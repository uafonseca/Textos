<form method="post" action="{{ path('global_link_delete', {'id': global_link.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ global_link.id) }}">
    <button class="btn">Delete</button>
</form>
