{{ form_start(form) }}
    <div class="col-md-12">
        <label for="mail_response_context">Contenido de la respuesta para el usuario {{mail.sender.name ~ ' ' ~ mail.sender.firstName}}</label>
        {{form_widget(form.context)}}
    </div>
    <div class="col-md-12">
        {{form_row(form.attached)}}
    </div>
   <button class="btn float-right mt-4"
         type="submit"
         style="background-color: {{ colors()['primary'] }}; color:white"
         data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Enviando...">
			<i class="fa fa-paper-plane" aria-hidden="true"></i>
			{{ button_label|default('Enviar respuesta') }}
		</button>
{{ form_end(form) }}
