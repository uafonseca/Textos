{% extends 'base.html.twig' %}

{% block title %}MailResponse index{% endblock %}

{% block body %}
    <h1>MailResponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Context</th>
                <th>Evaluation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail_response in mail_responses %}
            <tr>
                <td>{{ mail_response.id }}</td>
                <td>{{ mail_response.context }}</td>
                <td>{{ mail_response.evaluation }}</td>
                <td>
                    <a href="{{ path('mail_response_show', {'id': mail_response.id}) }}">show</a>
                    <a href="{{ path('mail_response_edit', {'id': mail_response.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mail_response_new') }}">Create new</a>
{% endblock %}
