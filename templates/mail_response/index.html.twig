<div class="card">
    <div class="card-header"></div>
    <div class="card-body">
        {{ sg_datatables_render_html(datatable) }}
    </div>
</div>
{{sg_datatables_render_js(datatable)}}
<script type="text/javascript">
     $(document).ready(function(){
     
      $('#sg-datatables-{{ datatable.uniqueName }}').off('click').on('click', '.action-evaluation', function (event) {

        event.preventDefault();

        const scope = $(this);
        

        $.ajax({
            url: scope.data('url'),
            type: 'POST',
            success: (data) => {
                if (data.data === true) {
                    app.dialogs.confirm({
                        message: 'La tarea ya fue calificada, <br> Â¿Desea cambiar la nota?',
                        onAccept: function () {
                            app.dialogs.create({
                                url: scope.attr('href') + '?uniq={{datatable.uniqueName}}'
                            })
                        }
                    });
                } else {
                    app.dialogs.create({
                        url: scope.attr('href') + '?uniq={{datatable.uniqueName}}'
                    })
                }
            }
        })
    }); 
    })
</script>