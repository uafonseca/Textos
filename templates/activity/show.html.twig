<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					{% if activity.type == 'Archivo' %}
					<h3 class="card-title">{{activity.name}}</h3>
					<a href="{{ vich_uploader_asset(activity.file, 'imagenFile') }}" download class="pull-right btn btn-primary">
							<i class="fa fa-download"></i>
							Descargar
						</a>
					{% endif %}
				</div>
				
				<div id="preview" class="card-body border border-primary text-center" style="height:280px!important">
					{% if activity.type == 'Youtube' %}
						{% if activity.url is not null %}
							{{ youtube_embed(activity.url)|raw }}
						{% endif %}
						{% if activity.code is not null %}
							{{ activity.code|raw }}
						{% endif %}
					{% elseif activity.type == 'Video' %}
						<video controls style='width:100%; height:100%' src="{{ vich_uploader_asset(activity.file, 'imagenFile')}}"></video>
					{% elseif activity.type == 'Audio' %}
						<audio controls style='width:100%; height:100%' src="{{ vich_uploader_asset(activity.file, 'imagenFile')}}"></audio>
					{% elseif activity.type == 'Genially' %}
						{% if activity.url is not null %}
							<iframe style='width:100%; height:100%' src="{{ activity.url }}"></iframe>
						{% endif %}
						{% if activity.code is not null %}
							{{ activity.code|raw }}
						{% endif %}
					{% elseif activity.type == 'Archivo' %}
						<iframe style='width:100%; height:100%' src="https://docs.google.com/gview?url={{ app.request.schemeAndHttpHost ~ vich_uploader_asset(activity.file, 'imagenFile') }}&embedded=true"></iframe>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
