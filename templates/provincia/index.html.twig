{% extends 'layout.html.twig' %}

{% block title %}Provincia index{% endblock %}

{% block body %}
    <h1>Listado de provincias</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provincium in provincias %}
            <tr>
                <td>{{ provincium.nombre }}</td>
                <td>
                    <a href="{{ path('provincia_edit', {'id': provincium.id}) }}" class="btn" style="background-color: {{ colors()['warning'] }}; color:white;"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('provincia_new') }}" class="btn"  style="background-color: {{ colors()['primary'] }}; color:white;"><i class="fa fa-plus"></i> Nueva provincia</a>
{% endblock %}
