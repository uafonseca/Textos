{% extends 'layout.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Categor√≠as</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-primary"><i class="fa fa-plus"> Adicionar</i></a>
{% endblock %}
