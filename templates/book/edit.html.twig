{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% import "macros/card-macro.html.twig" as card_macro %}

{% block title %}Edit Book
{% endblock %}

{% block body %}
	{{card_macro.card_title('<h2>Editar texto</h2>')}}
{{ form_start(form) }}
	<div class="row">
		<div class="col-md-3">
			<div class="card">
				<div class="card-body">
                    {{ form_row(form.portada)}}
				</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<div class="card-body">
					
					<div class="row">
						<div class="col-md-6 col-sm-12">{{ form_row(form.title)}}
						</div>
						<div class="col-md-6 col-sm-12">{{ form_row(form.source)}}
						</div>
						<div class="col-md-6 col-sm-12">{{ form_row(form.category)}}
						</div>
						<div class="col-md-6 col-sm-12">{{ form_row(form.stage)}}
						</div>
						<div class="col-md-4 col-sm-12">{{ form_row(form.level)}}
						</div>
						<div class="col-md-4 col-sm-6 mt-4 text-center">{{ form_row(form.free)}}
						</div>
						<div class="col-md-4 col-sm-12">{{ form_row(form.banner)}}</div>
					
						<div class="col-md-12 col-sm-12 mt-3">{{ form_row(form.metadata.introduction)}}</div>
						<div class="col-md-12 col-sm-12 mt-3">{{ form_row(form.metadata.curriculum)}}</div>
						<div class="col-md-12 col-sm-12 mt-3">{{ form_row(form.metadata.aboutAuthor)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.author)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.dedication)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.language)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.transcription)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.learning)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.intitution.name)}}</div>
						<div class="col-md-4 col-sm-12 mt-3">{{ form_row(form.metadata.intitution.web)}}</div>
						
						<div class="col-md-3 col-sm-12 mt-3">
							<button class="btn" style="background-color: {{ colors()['primary'] }}; color:white;">
								<i class="fa fa-save"></i>
								{{ button_label|default('Editar') }}</button>
						</div>
                        <div class="col-md-3 col-sm-12 mt-3">
							<a href="{{ path('book_index') }}" class="btn" style="background-color: {{ colors()['secondary'] }}; color:white;">
								<i class="fa fa-arrow-left"></i>
								Regresar</a>
						</div>
                       
					</div>
					
				</div>
			</div>
		</div>
	</div>
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        const image_url_defaultPreview = '{{ vich_uploader_asset(book.portada , 'imagenFile') }}';
    </script>
	{{ encore_entry_script_tags('book.form') }}
{% endblock %}
