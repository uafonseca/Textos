{% extends 'layout.html.twig' %}

{% block title %}Slide{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Título</th>
                    <td>{{ slide.title }}</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>{{ slide.shortDescription }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('slide_index') }}" class="btn" style="background-color: {{ colors()['secondary'] }}; color:white;"><i class="fa fa-arrow-alt-circle-left"></i> Regresar</a>

            <a href="{{ path('slide_edit', {'id': slide.id}) }}" class="btn"  style="background-color: {{ colors()['primary'] }}; color:white;"><i class="fa fa-edit"></i> Editar</a>

            {{ include('slide/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
