{% extends 'layout.html.twig' %}

{% block title %}Level{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h1>Tipo de curso</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nombre</th>
                    <td>{{ level.name }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('level_index') }}" class="btn" style="background-color: {{ colors()['secondary'] }}; color:white;"><i class="fa fa-arrow-left"></i> Regresar</a>
            <br>
            <a href="{{ path('level_edit', {'id': level.id}) }}" class="btn mt-3" style="background-color: {{ colors()['info'] }}; color:white;"><i class="fa fa-edit"></i> Editar</a>

            {{ include('level/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
