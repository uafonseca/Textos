<form method="post" action="{{ path('level_delete', {'id': level.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ level.id) }}"><br>
    <button class="btn btn-danger"><i class="fa fa-times"></i> Eliminar</button>
</form>
