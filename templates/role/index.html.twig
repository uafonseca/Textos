{% extends 'layout.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Listado de roles</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.rolename }}</td>
                <td>
                    <a href="{{ path('role_edit', {'id': role.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No se encontraron elementos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('role_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo rol</a>
{% endblock %}
