{{ form_start(form) }}

<div class="row">
	<div class="col-md-12">{{ form_row(form.subject) }}</div>
	<div class="col-md-12">{{ form_row(form.context) }}</div>
	<div class="col-md-6">{{ form_row(form.attached) }}</div>
	<div class="col-md-6">
		<button class="btn float-right mt-4"
         type="submit"
         style="background-color: {{ colors()['primary'] }}; color:white"
         data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Enviando...">
			<i class="fa fa-paper-plane" aria-hidden="true"></i>
			{{ button_label|default('Enviar mensaje') }}
		</button>
	</div>
</div>
{{ form_end(form) }}
