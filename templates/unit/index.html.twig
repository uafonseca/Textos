{% extends 'layout.html.twig' %}

{% block title %}Unit index{% endblock %}

{% block body %}
    <h1>Unidades</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Libro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td>{{ unit.name }}</td>
                <td>{{ unit.book.title }}</td>
                <td>
                    <a href="{{ path('unit_edit', {'id': unit.id}) }}" class="btn btn-warning"> <i class="fa fa-edit"></i> </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('unit_new') }}" class="btn btn-primary"> <i class="fa fa-plus-circle"></i> Adicionar</a>
{% endblock %}
