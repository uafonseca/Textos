{% extends 'layout.html.twig' %}

{% block title %}
	{{ unit.name }}
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-header">
			<h2 class="card-text text-center">{{ unit.book.title }}</h2>
			<h3 class="card-text">
				{{ unit.name }}
				<a href="{{ path('book_show', {'uuid': unit.book.uuid}) }}" class="btn btn-warning btn-sm pull-right ml-3 mt-1">Ver unidades</a>
				{% if unit.evaluations|length > 0 %}
					<a href="{{ path('evaluation_show', {'uuid': unit.evaluations[0].uuid}) }}" style="background-color: {{ colors()['info'] }}; color:white;" class="btn btn-sm pull-right ml-3 mt-1">
						<i class="fa fa-graduation-cap"></i>
						Evaluaci√≥n
					</a>
				{% endif %}
			</h3>
		</div>
		<div class="card-body">
			<section>
				<div class="row">
					<div class="col-md-8">
						<iframe style="width: 100%; min-height: 900px;" src="{{ vich_uploader_asset(unit.pDF,'pdfFile') }}"></iframe>
					</div>
					<div class="col-md-4">
						<div class="card">
							<div class="card-header">Recusros</div>
							<div class="card-body">
								<h3>Videos de youtube</h3>
								{% for activity in unit.activities %}
									{% if activity.type == 'Youtube' %}
										<div class="card">
									
											<div class="card-body">
												{{ youtube_embed(activity.url)|raw }}
											</div>
											<div class="card-footer">
												{{activity.name ~ ' Pag. '~activity.page}}
											</div>
										</div>
									{% endif %}
								{% endfor %}
								<h3>Videos</h3>
								{% for activity in unit.activities %}
									{% if activity.type == 'Video' %}
										<div class="card">
						
											<div class="card-body">
												<video controls style='width:100%; height:100%' src="{{ vich_uploader_asset(activity.file, 'imagenFile')}}"></video>
											</div>
											<div class="card-footer">
												{{activity.name ~ ' Pag. '~activity.page}}
											</div>
										</div>
									{% endif %}
								{% endfor %}
								<h3>Audios</h3>
								{% for activity in unit.activities %}
									{% if activity.type == 'Audio' %}
										<div class="card">
									
											<div class="card-body">
												<audio controls style='width:100%; height:100%' src="{{ vich_uploader_asset(activity.file, 'imagenFile')}}"></audio>
											</div>
											<div class="card-footer">
												{{activity.name ~ ' Pag. '~activity.page}}
											</div>
										</div>
									{% endif %}
								{% endfor %}
								<h3>Archivos</h3>
								{% for activity in unit.activities %}
									{% if activity.type == 'Archivo' %}
										<div class="card">
											<div class="card-body">
												<a class="btn btn-primary" download href="vich_uploader_asset(activity.file, 'imagenFile')}}">
												<i class="fa fa-download"></i>
												{{activity.name}}</a>
											</div>
												<div class="card-footer">
												{{activity.name ~ ' Pag. '~activity.page}}
											</div>
										</div>
									{% endif %}
								{% endfor %}
								<h3>Enlaces</h3>
								{% for activity in unit.activities %}
									{% if activity.type == 'Genially' %}
										<div class="card">
											<div class="card-body">
												<a href="{{activity.url}}" download >{{activity.url}}</a>
											</div>
											<div class="card-footer">
												{{activity.name ~ ' Pag. '~activity.page}}
											</div>

										</div>
									{% endif %}
								{% endfor %}

							</div>
						</div>
					</div>
				</div>
				<div class="row  mt-4"></div>
			</section>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script type="text/javascript">
		$(function () {
$('.show-details').on('click', function (event) {
event.preventDefault();
const scope = $(this);
app.dialogs.create({url: scope.attr('href')})
})
})
	</script>
{% endblock %}
