<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                Curso: <stromg> {{group.course}}</stromg>
            </div>
            <div class="col-md-6">
            {% if url is defined %}
                <a class="btn btn-primary float-right" download href="{{url}}?print=true"><i class="fa fa-download"></i></a>
            {% endif %}
            </div>
            <div class="col-md-12">
                Fecha de inicio:<stromg> {{group.startDate|date('d-m-Y')}}</stromg>
            </div>
        </div>

    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered dataTable no-footer">
        <thead>
            <tr>
                <th>Temario</th>
                <th>Nota</th>
                <th style="width: 20%;">Estado</th>
            </tr>
        </thead>
        <tbody>
            {% for item in data['evaluation'] %}
                <tr>
                    <td>{{ data['evaluation'][loop.index -1 ] }}</td>
                    <td>{{ data['points'][loop.index -1 ] }}</td>
                    <td>{{ data['status'][loop.index -1 ]|raw }}</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
    </div>
</div>
