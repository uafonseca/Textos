<div class="card">
    <div class="card-header">
        Evaluaciones
    </div>
    <div class="card-body table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Título</th>
                <th>Correo</th>
                <th>No. Preguntas</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for evaluation in evaluations %}
                <tr>
                    <td>{{ evaluation.title }}</td>

                    <td>{{ evaluation.email }}</td>
                    <td>{{ evaluation.questions|length }}</td>
                    <td>
                        <a href="{{ path('evaluation_add_question', {'uuid': evaluation.uuid}) }}" class="text-info add-question" data-tippy-content="Gestionar preguntas"><i class="fa fa-plus-circle"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">Aún no hay evaluaciones</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function (){
        $('.add-question').on('click',function (event){
            event.preventDefault();
            const scope = $(this)
            app.dialogs.create({
                url:scope.attr('href'),
                columnClass : 'col-md-10 offset-md-1'
            })
        })
    })
</script>
