{% extends 'layout.html.twig' %}
{% import "macros/card-macro.html.twig" as card_macro %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-header text-center">
			<h3 class="card-title">Mis textos</h3>
		</div>
		<div class="card-body">
			<div class="row">
				{% for item in books %}
					<div class="col-12 col-md-4 col-lg-3">
						<div class="card">
							<img class="card-img-top img-resized" src="{{ vich_uploader_asset(item.portada , 'imagenFile') }}" alt="Unsplash">
							<div class="card-header">
								<h3 class="mb-0">
									<strong>{{ item.title }}</strong>
								</h3>
							</div>
							<div class="card-body">
								<p class="card-text">{{ item.level }}</p>
								<a href="{{ path('book_show', { 'uuid': item.uuid }) }}" class="btn btn-pill btn-success">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye align-middle mr-2">
										<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
										<circle cx="12" cy="12" r="3"></circle>
									</svg>
									Detalles
								</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-12 text-center">
						<h1 class="text-center">UPS!</h1>
						<p class="text-center">No tienes ningún texto activado</p>
						<a href="{{ path('app_home_page')}}" class="btn btn-primary"> Ver catálogo</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
